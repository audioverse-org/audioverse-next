{
	"defaults": {
		"standard": "WCAG2AA",
		"runners": [
			"htmlcs",
			"axe"
		],
		"reporters": [
			"pa11y-ci-reporter-cli-summary",
			[
				"pa11y-ci-reporter-html",
				{
					"destination": "./reports"
				}
			],
			[
				"json",
				{
					"fileName": "./reports/results.json"
				}
			]
		]
	},
	"chromeLaunchConfig": {
		"args": [
			"--no-sandbox",
			"--disable-setuid-sandbox",
			"--disable-dev-shm-usage"
		]
	}
}
