        "jest": "^27.5.1",
        "jest-canvas-mock": "^2.5.1",
        "jest-date-mock": "^1.0.8",
        "jest-when": "^3.5.2",
        "next-sitemap": "^4.1.3",
        "pa11y-ci": "^2.4.2",
        "prettier": "^2.8.8",
        "svgo": "^3.0.2",
        "ts-jest": "^27.1.3",
        "tsconfig-paths-jest-mapper": "^1.4.0",
