{
  "name": "audioverse-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "format": "prettier --write .",
    "lint": "eslint --max-warnings 0 --ext .ts --ext .tsx --ext .js --ext .jsx src/",
    "lint:fix": "eslint --fix --ext .ts --ext .tsx --ext .js --ext .jsx src/",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "extract": "formatjs extract 'src/**/*.tsx' --throws --extract-source-location --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file public/lang/en.json",
    "compile": "formatjs compile-folder --ast public/lang public/compiled-lang",
    "precommit": "npm run lint:fix && npm run test",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@types/cookie": "^0.4.0",
    "@types/js-cookie": "^2.2.6",
    "@types/lodash": "^4.14.161",
    "@types/react-query": "^1.1.2",
    "@types/video.js": "^7.3.11",
    "cookie": "^0.4.1",
    "feed": "^4.2.1",
    "full-icu": "^1.3.1",
    "js-cookie": "^2.2.1",
    "lodash": "^4.17.20",
    "next": "^10.0.0",
    "next-pwa": "^3.1.4",
    "react": "^16.13.1",
    "react-dom": "16.13.1",
    "react-intl": "^5.8.3",
    "react-query": "^3.5.5",
    "react-toastify": "^6.2.0",
    "react-tooltip": "^4.2.11",
    "sass": "^1.26.10",
    "video.js": "^7.10.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.5",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@formatjs/cli": "^2.12.0",
    "@testing-library/dom": "^7.24.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@testing-library/user-event": "^12.1.3",
    "@types/react": "^16.9.49",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^26.3.0",
    "babel-plugin-react-intl": "^8.2.4",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-formatjs": "^2.7.12",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest-dom": "^3.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-testing-library": "^3.9.2",
    "husky": "^5.0.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.2",
    "jest-canvas-mock": "^2.3.0",
    "prettier": "^2.1.1",
    "react-topbar-progress-indicator": "^4.1.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "@lib/(.*)": "<rootDir>/src/lib/$1",
      "@components/(.*)": "<rootDir>/src/components/$1",
      "@containers/(.*)": "<rootDir>/src/containers/$1",
      "@pages/(.*)": "<rootDir>/src/pages/$1"
    },
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/testSetup.ts"
    ]
  }
}
